{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@infrastructure/*": ["./infrastructure/*"],
      "@core/*": ["./core/*"],
      "@modules/*": ["src/modules/*"]
    }
  },
  "include": ["src/**/*.ts", "tests__/**/*.ts"] // ðŸ‘ˆ Adicione esta linha
}
