upstream backend {
    server backend:3001;
    server backend:3002;
    server backend:3003;
}

server {
    listen 80;
    server_name 127.0.0.1;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name 127.0.0.1;
    ssl_certificate /etc/ssl/ca.pem;
    ssl_certificate_key /etc/ssl/ca.key;

    # Ciphers modernos e segurança aprimorada
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers on;

    # Habilitar OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;

    # Cache de certificados
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;

    # Configuração de keepalive
    keepalive_timeout 65;

    # Limite de buffers
    client_max_body_size 10M;
    proxy_buffers 16 4k;
    proxy_buffer_size 2k;

    location /api/ {
        proxy_pass http://backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;


        
          # Buffer maior para alta carga
        proxy_buffers 16 32k;
        proxy_buffer_size 64k;
    }  
}